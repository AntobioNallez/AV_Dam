<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <xs:element name="Concesionario">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="Coche" maxOccurs="unbounded" type="cochesType"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:complexType name="cochesType">
        <xs:sequence>
            <xs:element name="Marca" type="marcas" />
            <xs:element name="MatrÃ­cula" type="matriculaType" />
            <xs:element name="Potencia" type="potencias"/>
            <xs:element name="Plazas" type="plazasType" />
            <xs:element name="Num_puertas" type="puertasType" />
            <xs:element name="Bajas_emisiones" minOccurs="0" type="emisionesType"/>
            <xs:choice>
                <xs:element name="Vendido" type="vendidoType" />
                <xs:element name="NoVendido" type="noVendidoType" />
            </xs:choice>
        </xs:sequence>
    </xs:complexType>

    <xs:simpleType name="matriculaType">
        <xs:restriction base="xs:string">
            <xs:length value="7" />
        </xs:restriction>
    </xs:simpleType>

    <xs:complexType name="marcas">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="modelo" use="required" />
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

    <xs:complexType name="potencias">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="combustible" default="gasolina" type="combustibles" />
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

    <xs:simpleType name="combustibles">
        <xs:restriction base="xs:string">
            <xs:enumeration value="gasolina" />
            <xs:enumeration value="gasoil" />
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="plazasType">
        <xs:restriction base="xs:integer">
            <xs:pattern value="[2-7]" />
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="puertasType">
        <xs:restriction base="xs:integer">
            <xs:enumeration value="3" />
            <xs:enumeration value="4" />
            <xs:enumeration value="5" />
        </xs:restriction>
    </xs:simpleType>

    <xs:complexType name="emisionesType">
        <xs:attribute name="CO2" type="CO2Type" use="optional" />
    </xs:complexType>

    <xs:simpleType name="CO2Type">
        <xs:restriction base="xs:integer">
            <xs:maxExclusive value="5" />
        </xs:restriction>
    </xs:simpleType>

    <xs:complexType name="vendidoType">
        <xs:sequence>
            <xs:element name="FechaVenta" type="xs:date"/>
            <xs:element name="Comprador" />
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="noVendidoType">
        <xs:attribute name="fechaEntrada" type="xs:date"/>
    </xs:complexType>
</xs:schema>
